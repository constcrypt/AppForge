{
	"$schema": "https://biomejs.dev/schemas/2.3.4/schema.json",
	"formatter": {
		"enabled": true,
		"lineWidth": 100,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": "off",
			"complexity": "off",
			"correctness": {
				"noUnusedImports": "off"
			},
			"style": "off"
		}
	},
	"assist": {
		"actions": { "source": { "organizeImports": "off" } }
	},
	"files": {
		"includes": ["**/*.{ts,tsx,js,jsx,json,css,scss,md}"]
	}
}
